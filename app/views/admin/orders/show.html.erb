<h2>注文履歴詳細</h2>

<table>
  <tr>
    <th>購入者</th>
    <td><%= link_to @order.name, admin_customer_path %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.postal_code %><%= @order.address %></td>
    <td><%= @order.name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment _method %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
    <td><%= link_to "更新", admin_order_path %></td>
  </tr>
</table>

<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @order.each do |order| %>
        <tr>
          <td><%= order.item.name %></td>
          <td><%= order.item.with_tax_price%></td>
          <td><%= order.item.amount %></td>
          <td><%= order.subtotal %></td>
          <td></td>
          <td><%= f.submit '更新' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <table>
    <tr>
      <th>商品合計</th>
      <td><%= @total %></td>
    </tr>
    <tr>
      <th>送料</th>
      <td>800円</td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td></td>
    </tr>
  </table>
</div>
