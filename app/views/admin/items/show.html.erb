<h2>商品詳細</h2>
  <table>
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.description %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格</td>
        <td><%= (@item.price*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if @item.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <%= link_to "編集する", edit_admins_item_path(@item) %>
