<h2>商品編集</h2>
  <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
    <table>
      <thead>
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :introduction, :size=>"50" %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td><%= f.radio_button :is_active, '1' %></td>
          <td><%= f.label :is_active, '販売中', value: 1 %></td>
          <td><%= f.radio_button :is_active, '0' %></td>
          <td><%= f.label :is_active, '販売停止中', value: 0 %></td>
        </tr>
      </tbody>
    </table>

    <%= f.submit '変更を保存' %>
  <% end %>
