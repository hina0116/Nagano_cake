<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <table>
      <tr>
        <td>顧客ID</td>
        <td><%= @customer.id %></td>

      <td><%= f.label :氏名 %></td>
      <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>

      <td><%= f.label :フリガナ %></td>
      <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>

      <td><%= f.label :郵便番号 %></td>
      <td><%= f.text_field :postal_code %></td>

      <td><%= f.label :住所 %></td>
      <td><%= f.text_field :address, :size=>"100" %></td>

      <td><%= f.label :電話番号 %></td>
      <td><%= f.text_field :telephone_number %></td>

      <td><%= f.label :メールアドレス %></td>
      <td><%= f.text_field :email %></td>

      <td><%= f.label :会員ステータス %></td>
      <td>
        <%= f.radio_button :items, '1' %>
        <%= f.label :items, '有効', value: 1 %>
        <%= f.radio_button :items, '0' %>
        <%= f.label :items, '退会', value: 0 %>
      </td>
      <%= f.submit '変更を保存' %>
      </tr>
    </table>
  <% end %>
