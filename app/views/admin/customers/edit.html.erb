<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <table>
      <tr>
        <th>顧客ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <th><%= f.label :氏名 %></th>
        <%= f.text_field :last_name %><%= f.text_field :first_name %>
      
      <th><%= f.label :フリガナ %></th>
        <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>

      <th><%= f.label :郵便番号 %></th>
        <%= f.text_field :postal_code %>
      
      <th><%= f.label :住所 %></th>
        <%= f.text_field :address, :size=>"100" %>
      
      <th><%= f.label :電話番号 %></th>
        <%= f.text_field :telephone_number %>
      
      <th><%= f.label :メールアドレス %></th>
        <%= f.text_field :email %>
      
      <th><%= f.label :会員ステータス %></th>
        <%= f.radio_button :items, '1' %>
        <%= f.label :items, '有効', value: 1 %>
        <%= f.radio_button :items, '0' %>
        <%= f.label :items, '退会', value: 0 %>
      
      <%= f.submit '変更を保存' %>
    <% end %>
