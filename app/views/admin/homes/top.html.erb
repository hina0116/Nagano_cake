<h2>注文履歴一覧</h2>
  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at, admin_path %></td>
          <td><%= order.name %></td>
          <td><%= order.order_details.amount %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
