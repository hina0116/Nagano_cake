<h2>注文履歴一覧</h2>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入書</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to order.created_at %></td>
          <td><%= link_to item.name ,admin_item_path(@items) %></td>
          <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
          <td><%= item.genre.name %></td>
          <td><% if item.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
