<h2>注文履歴詳細</h2>
<%= form_with model: @order, url: '/public/addresses', method: :get do |f| %>
  <h6>注文情報</h6>
    <table class="table table-bordered">
      <tr>
        <th class="nowrap">注文日</th>
        <td><%= order.created_at %></td>
      </tr>
      <tr>
        <th class="nowrap">配送先</th>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
      </tr>
      <tr>
        <th class="nowrap">支払方法</th>
        <td><%= order.payment_method %></td>
      </tr>
      <tr>
        <th class="nowrap">ステータス</th>
        <td><%= order.status %></td>
      </tr>
    </table>
    
  <h6>請求情報</h6>
    <table class="table table-bordered">
      <tr>
        <th class="nowrap">商品合計</th>
        <td></td>
      </tr>
      <tr>
        <th class="nowrap">配送料</th>
        <td></td>
      </tr>
      <tr>
        <th class="nowrap">ご請求額</th>
        <td></td>
      </tr>
    </table>
    
  <h6>注文内容</h6>
    <table class="table table-bordered">
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.item.name %></td>
          <td><%= order.item.with_tax_price%></td>
          <td><%= order.item.amount %></td>
          <td><%= order.subtotal %></td>
        </tr>
      <% end %>
    </table>
