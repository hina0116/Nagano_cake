<h2>注文情報確認</h2>
<%= form_with model: @order, url: '/public/addresses', method: :post do |f| %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <% if cart_item.item.image.attached? %>
              <%= image_tag cart_item.item.image, size: "50x50" %>
            <% else %>
              <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id) do |f| %>
              <%= f.select :amount, *[1..3] %>
              <%= f.hidden_field :item_id, :value => cart_item.item.id %>
              <%= f.submit '変更' %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %></td>
          <% @total +=  cart_item.subtotal %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table class="table table-bordered">
    <tr>
      <th>送料</th>
      <td><%= @order.shipping_cost %></td>
      <th>商品合計</th>
      <td><%= @total %></td>
      <th>請求金額</th>
      <td><%= @total + @order.shipping_cost %></td>
    </tr>
  </table>



<% end %>

