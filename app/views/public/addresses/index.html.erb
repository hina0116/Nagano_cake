<h2>配送先登録/一覧</h2>
  <table>
    <tr>
      <td><%= f.label :郵便番号（ハイフンなし） %></td>
      <td><%= f.text_field :postal_code %></td>

      <td><%= f.label :住所 %></td>
      <td><%= f.text_field :address %></td>

      <td><%= f.label :宛名 %></td>
      <td><%= f.text_field :name %></td>

      <%= f.submit '新規登録' %>
    </tr>
  </table>

  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
          <td><%= address.name %></td>
          <td>
            <% if @address.user == current_user %>
              <%= link_to "編集する", edit_public_address_path(@address) %>
            <% end %>
            <% if @address.user == current_user %>
              <%= link_to "削除する", public_addresses_path(@address), method: :delete %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

