<h2>配送先編集</h2>
  <%= form_with model: @address, url: public_addresses_path(@address.id), method: :patch do |f| %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, :size=>"50" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '変更内容を保存' %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
