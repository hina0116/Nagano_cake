<h2>配送先編集</h2>
  <%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
    <table>
      <tr>
        <th><%= f.label :postal_code, '郵便番号（ハイフンなし）' %></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :address, '住所' %></th>
        <td><%= f.text_field :address, :size=>"50" %></td>
      </tr>
      <tr>
        <th><%= f.label :name, '宛名' %></th>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit '変更内容を保存', class: "btn btn-success" %></td>
      </tr>
    </table>
  <% end %>
